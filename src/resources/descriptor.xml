<assembly>
	<formats>
		<format>dir</format>
	</formats>

	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<outputDirectory>lib</outputDirectory>
		</dependencySet>
	</dependencySets>
	<files>
		<file>
			<source>target/${artifactId}-${project.version}.${project.packaging}
			</source>
			<destName>${artifactId}.${project.packaging}</destName>
		</file>
		<file>
			<source>LastVersion.txt</source>
			<destName>LastVersion.txt</destName>
		</file>
	</files>
</assembly>